{
  "name": "local-sports-hub",
  "main": "expo-router/entry",
  "version": "1.0.0",
  "private": true,
  "scripts": {
    "dev": "EXPO_NO_TELEMETRY=1 expo start",
    "android": "EXPO_NO_TELEMETRY=1 expo start --android",
    "ios": "EXPO_NO_TELEMETRY=1 expo start --ios", 
    "web": "EXPO_NO_TELEMETRY=1 expo start --web",
    "build:web": "expo export --platform web",
    "build:android": "expo build:android",
    "build:ios": "expo build:ios",
    "lint": "eslint . --ext .ts,.tsx,.js,.jsx",
    "typecheck": "tsc --noEmit",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage"
  },
  "dependencies": {
    "@expo/vector-icons": "^14.1.0",
    "@lucide/lab": "^0.1.2",
    "@react-native-async-storage/async-storage": "^2.1.0",
    "@react-native-community/datetimepicker": "8.2.0",
    "@react-navigation/bottom-tabs": "^7.2.0",
    "@react-navigation/native": "^7.0.14",
    "@react-navigation/native-stack": "^7.1.0",
    "expo": "~54.0.0",
    "expo-blur": "~15.1.0",
    "expo-camera": "~17.1.0",
    "expo-constants": "~18.1.0",
    "expo-font": "~14.2.0",
    "expo-haptics": "~15.1.0",
    "expo-image-picker": "~17.1.0",
    "expo-linear-gradient": "~15.1.0",
    "expo-linking": "~8.1.0",
    "expo-location": "~19.1.0",
    "expo-notifications": "~0.31.0",
    "expo-router": "~6.0.0",
    "expo-splash-screen": "~0.31.0",
    "expo-status-bar": "~2.3.0",
    "expo-symbols": "~0.5.0",
    "expo-system-ui": "~6.0.0",
    "expo-web-browser": "~15.1.0",
    "firebase": "^11.1.0",
    "lucide-react-native": "^0.475.0",
    "react": "18.3.1",
    "react-dom": "18.3.1", 
    "react-native": "0.76.5",
    "react-native-gesture-handler": "~2.22.0",
    "react-native-maps": "^1.18.0",
    "react-native-modal": "^13.0.1",
    "react-native-picker-select": "^9.3.1",
    "react-native-reanimated": "~3.16.1",
    "react-native-safe-area-context": "4.14.0",
    "react-native-screens": "~4.3.0",
    "react-native-svg": "15.9.0",
    "react-native-url-polyfill": "^2.0.0",
    "react-native-uuid": "^2.0.2",
    "react-native-web": "~0.19.13",
    "react-native-webview": "13.12.2"
  },
  "devDependencies": {
    "@babel/core": "^7.25.2",
    "@types/jest": "^29.5.14",
    "@types/react": "~18.3.12",
    "@typescript-eslint/eslint-plugin": "^8.18.1",
    "@typescript-eslint/parser": "^8.18.1",
    "eslint": "^9.17.0",
    "eslint-config-expo": "^7.1.2",
    "eslint-plugin-react": "^7.37.2",
    "eslint-plugin-react-hooks": "^5.0.0",
    "eslint-plugin-react-native": "^4.1.0",
    "jest": "^29.2.1",
    "jest-expo": "~54.0.0",
    "prettier": "^3.4.2",
    "typescript": "~5.3.3"
  },
  "jest": {
    "preset": "jest-expo/ios",
    "transformIgnorePatterns": [
      "node_modules/(?!((jest-)?react-native|@react-native(-community)?)|expo(nent)?|@expo(nent)?/.*|@expo-google-fonts/.*|react-navigation|@react-navigation/.*|@unimodules/.*|unimodules|sentry-expo|native-base|react-native-svg)"
    ],
    "testMatch": [
      "**/__tests__/**/*.(ts|tsx|js)",
      "**/*.(test|spec).(ts|tsx|js)"
    ],
    "collectCoverageFrom": [
      "**/*.{ts,tsx}",
      "!**/*.d.ts",
      "!**/node_modules/**",
      "!**/__tests__/**",
      "!**/coverage/**"
    ],
    "setupFilesAfterEnv": ["<rootDir>/jest.setup.js"]
  }
}